<%
const site = {
  name: 'Citizen Science',
  description: 'A tool for participatory monitoring in Kullaberg.',
  github: "https://xtreemze.github.io/KullabergCitizenScience/",
  logo: require('./img/Kv4sq.svg')
}
%>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <title>${ site.name }</title>
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, minimum-scale=0.0, maximum-scale=10.0">
    <script type='application/ld+json'>
{
	"@context": "http://schema.org/",
	"@type": "SoftwareApplication",
	"applicationCategory": "Research",
	"downloadUrl": "${ site.github }",
	"installUrl": "${ site.github }",
	"operatingSystem": "All",
	"softwareVersion": "1.0.0",
	"datePublished": "2017",
	"fileFormat": "HTML5",
	"isAccessibleForFree": "True",
	"isFamilyFriendly": "True",
	"keywords": "citizen science, research, pmt, monitoring",
	"license": "GPL 3.0",
	"offers": {
		"@type": "Offer",
		"price": "0",
		"priceCurrency": "$"
	},
	"mainEntityOfPage": "${ site.github }",
	"name": "${ site.name }"
}
</script>
    <link rel="canonical" href="${ site.github }" />
    <link rel="manifest" href="${ site.github }manifest.json">
    <meta name="theme-color" content="#0d47a1">
    <link rel="apple-touch-icon" sizes="180x180" href="${ site.github }apple-touch-icon.png">
    <link rel="icon" type="image/png" href="${ site.github }favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="${ site.github }favicon-16x16.png" sizes="16x16">
    <link rel="mask-icon" href="${ site.github }safari-pinned-tab.svg" color="#0d47a1">
    <meta name="apple-mobile-web-app-title" content="${ site.name }">
    <meta name="application-name" content="${ site.name }">
    <meta name="msapplication-TileColor" content="#603cba">
    <meta name="msapplication-TileImage" content="${ site.github }mstile-310x310.png">
    <meta name="msapplication-config" content="${ site.github }browserconfig.xml">
    <style>
      .logoImg {
        transition: transform 600ms cubic-bezier(0.165, 0.84, 0.44, 1);
        margin-top: 1.3rem;
        margin-right: 0.2rem;
        width: 1.6rem;
        margin-left: 0.4rem;
      }

      #loading {
        height: 100%;
        width: 100%;
        background-color: #eeeeee;
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        z-index: 1;
        overflow: hidden;
        margin: 0;
        padding: 0;
        left: 0;
        bottom: 0;
        pointer-events: none;
      }

      .loaderImg {
        max-width: 192px;
        max-height: 192px;
      }

    </style>
  </head>

  <body id="loadContent" class="grey lighten-3">
    <section id="loading">
      <img class="loaderImg" src="${ site.logo }" alt="${ site.name }">
    </section>
    <main class="container section">
      <section class="row" id="missions"></section>
    </main>
    <footer id="foot" class="page-footer z12 row hidden">
      <div class="container">
        <section class="">
          <span onclick="showMissions(600)" class="brand-logo left pointer">
            ${ site.name }
          </span>
          <div class="left" id="navigationBreadcrumbs">
          </div>
        </section>
      </div>
    </footer>
    <canvas class="fullScreenCeleb" id="confettiId"> </canvas>
  </body>

  </html>
